{
	"appId": "center.usahome.app",
	"appName": "USA Home",
	"webDir": "client/dist",
	"server": {
		"androidScheme": "https",
		"iosScheme": "https",
		"url": "https://usa-home-app.replit.app",
		"cleartext": false,
		"allowNavigation": [
			"*.replit.app",
			"*.usahome.com"
		]
	},
	"android": {
		"backgroundColor": "#FFFFFF",
		"allowMixedContent": false,
		"captureInput": true,
		"appendUserAgent": "USAHomeApp/1.1.0",
		"initialFocus": true,
		"overrideUserAgent": ""
	},
	"ios": {
		"contentInset": "automatic",
		"scheme": "USAHome",
		"backgroundColor": "#ffffff",
		"limitsNavigationsToAppBoundDomains": true,
		"preferredContentMode": "mobile",
		"appendUserAgent": "USAHomeApp/1.1.0"
	},
	"plugins": {
		"SplashScreen": {
			"launchShowDuration": 2000,
			"backgroundColor": "#ffffff",
			"showSpinner": true,
			"spinnerColor": "#3880ff",
			"androidSpinnerStyle": "large",
			"androidSplashResourceName": "splash",
			"splashFullScreen": true,
			"splashImmersive": true
		},
		"Device": {},
		"Network": {},
		"App": {
			"webFallback": {
				"enabled": true,
				"forwardUrl": "https://usahome.com/"
			}
		}
	},
	"packageClassList": [
		"AppPlugin",
		"CAPBrowserPlugin",
		"DevicePlugin",
		"CAPNetworkPlugin",
		"PreferencesPlugin",
		"SplashScreenPlugin",
		"StatusBarPlugin"
	]
}
